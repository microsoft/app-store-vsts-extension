{
    "id": "CBBF7F14-C386-4C1F-80A3-FE500E2BD976",
    "name": "AppStorePromote",
    "friendlyName": "App Store Promote",
    "description": "Release a build in iTunes Connect to the Apple App Store",
    "author": "Microsoft Corporation",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [ "xcode" ],
    "version": {
        "Major": "1",
        "Minor": "0",
        "Patch": "0"
    },
    "minimumAgentVersion": "1.95.3",
    "instanceNameFormat": "Submit a build to the App Store for review",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "authType",
            "type": "pickList",
            "label": "Authentication Method",
            "defaultValue": "ServiceEndpoint",
            "helpMarkDown": "",
            "options": {
                "ServiceEndpoint": "Service Endpoint",
                "UserAndPass": "Username and Password"
            }
        },
        {
            "name": "serviceEndpoint",
            "type": "connectedService:apple-app-store",
            "label": "Service Endpoint",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The VSTS Service Endpoint that specifies the identiy you wish to publish your IPA under.",
            "visibleRule": "authType = ServiceEndpoint"
        },
        {
            "name": "username",
            "type": "string",
            "label": "Email",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The email of the account with which to publish to the Apple App Store.",
            "visibleRule": "authType = UserAndPass"
        },
        {
            "name": "password",
            "type": "string",
            "label": "Password",
            "defaultValue": "",
            "isConfidential": true,
            "required": true,
            "helpMarkDown": "The password of the account with which to publish to the Apple App Store.",
            "visibleRule": "authType = UserAndPass"
        },
        {
            "name": "appIdentifier",
            "type": "string",
            "label": "Bundle ID",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The unique app identifier (e.g. com.myapp.etc)."
        },
        {
            "name": "chooseBuild",
            "type": "pickList",
            "label": "Choose Build",
            "defaultValue": "Latest",
            "helpMarkDown": "",
            "options": {
                "Latest": "Latest",
                "Specify": "Specify build number"
            },
            "properties":  {
                "EditableOptions": "True"
            }
        },
        {
            "name": "buildNumber",
            "type": "string",
            "label": "Build Number",
            "defaultValue": "",
            "required": true,
            "visibleRule": "chooseBuild = Specify",
            "helpMarkDown": "The build number in iTunes Connect that you wish to submit for review."
        },
        {
            "name": "shouldAutoRelease",
            "type": "boolean",
            "label": "Release Automatically",
            "required": false,
            "defaultValue": false,
            "helpMarkDown": "Automatically release the app once it is approved."
        },
        {
            "name": "teamId",
            "type": "string",
            "label": "Team Id",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "The ID of your team if you are in multiple teams"
        },
        {
            "name": "teamName",
            "type": "string",
            "label": "Team Name",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "The name of your team if you are in multiple teams"
        }
    ],
    "execution": {
        "Node": {
            "target": "app-store-promote.js",
            "argumentFormat": ""
        }
    }
}
